{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "bundler",

    "strict": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
